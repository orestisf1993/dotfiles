# assign applications to specific workspaces
# (?i) stands for case-insensitive
assign [class="(?i)firefox" window_role="browser"] $tag1
assign [class="(?i)chromium" window_role="browser"] $tag1
assign [class="(?i)chrome" window_role="browser"] $tag1
assign [class="(?i)telegram"] $tag9
assign [class="(?i)skype"] $tag9
assign [class="(?i)spotify"] $tag6

# custom borders
for_window [class=".*"] border normal
# Recommended by the i3-gaps doc but I didn't notice any problems without it:
#for_window [class=".*"] border pixel 0
for_window [class="(?i)firefox"] border none
for_window [class="(?i)chromium"] border none
for_window [class="(?i)chrome"] border none
for_window [class="(?i)spotify"] border pixel 5
for_window [class="(?i)wine"] border none
for_window [title="(?i)angrysearch"] border none
for_window [class="(?i)i3-exit"] border none

# manage floating for some window roles script to find out roles: https://faq.i3wm.org/question/2172/how-do-i-find-the-criteria-for-use-with-i3-config-commands-like-for_window-eg-to-force-splashscreens-and-dialogs-to-show-in-floating-mode/?answer=2174#post-id-2174
# open / save as etc... window
for_window [window_role="GtkFileChooserDialog"] floating disable
for_window [title="Weka GUI Chooser"] floating enable
for_window [class="(?i)zenity"] floating disable
for_window [title="(?i)guake"] floating enable
for_window [title="(?i)Torrent Options"] floating disable
for_window [title="(?i)angrysearch"] floating enable
for_window [title="(?i)angrysearch"] sticky enable
for_window [class="(?i)i3-exit"] sticky enable
for_window [class="(?i)i3-exit"] floating enable
