#!/bin/bash
# rofi-power
# Use rofi to call systemctl for shutdown, reboot, etc
# Taken from https://github.com/okraits/rofi-tools/blob/822d21d99104fba14f1eaee61f4258905ab91250/rofi-power
# 2016 Oliver Kraitschy - http://okraits.de

LAUNCHER='rofi -width 30 -dmenu -i -p rofi-power:'
OPTIONS="Lock\nReboot system\nPower-off system\nSuspend system"

# Show exit wm option if exit command is provided as an argument
if [ ${#1} -gt 0 ]; then
  OPTIONS="Exit window manager\n$OPTIONS"
fi

option=`echo -e $OPTIONS | $LAUNCHER | awk '{print $1}' | tr -d '\r\n'`
if [ ${#option} -gt 0 ]
then
    case $option in
      Exit)
        eval $1
        ;;
      Lock)
        ~/bin/lock.sh
        ;;
      Reboot)
        systemctl reboot
        ;;
      Power-off)
        systemctl poweroff
        ;;
      Suspend)
        systemctl suspend
        ;;
      Hibernate)
        systemctl hibernate
        ;;
      *)
        ;;
    esac
fi
