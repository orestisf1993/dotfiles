#!/bin/bash
# rofi-power
# Use rofi to call systemctl for shutdown, reboot, etc
# Taken from https://github.com/okraits/rofi-tools/blob/822d21d99104fba14f1eaee61f4258905ab91250/rofi-power
# 2016 Oliver Kraitschy - http://okraits.de

LAUNCHER='rofi -matching fuzzy -width 10 -hide-scrollbar -l 8 -dmenu -i -p rofi-power:'
OPTIONS="Lock\nToggle screens\nSleep monitor\nExit\nSuspend system\nReboot system\nPower-off system"

option=`echo -e $OPTIONS | $LAUNCHER | tr -d '\r\n'`
if [ ${#option} -gt 0 ]
then
    case "$option" in
      "Exit")
        i3-msg exit
        ;;
      "Lock")
        ~/bin/lock.sh
        ;;
      "Reboot system")
        systemctl reboot
        ;;
      "Power-off system")
        systemctl poweroff
        ;;
      "Suspend system")
        systemctl suspend
        ;;
      "Toggle screens")
        ~/.screenlayout/toggle-radeon.sh
        ;;
      "Sleep monitor")
        xset dpms force suspend
        ;;
      "Hibernate")
        systemctl hibernate
        ;;
      *)
        ;;
    esac
fi
